# Django Settings
# CRITICAL SECURITY SETTINGS - READ CAREFULLY!

# DEBUG: MUST be False in production!
# Leaving DEBUG=True in production exposes sensitive system information to attackers
DEBUG=False

# SECRET_KEY: MUST be unique and secure in production!
# Generate a new key using: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
# NEVER commit your real SECRET_KEY to version control!
SECRET_KEY=your-secret-key-here-CHANGE-THIS-IN-PRODUCTION

# ALLOWED_HOSTS: Comma-separated list of domains allowed to serve this application
# In production, replace with your actual domain(s)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DB_NAME=kurutracker
DB_USER=kurutracker_user
DB_PASSWORD=changeme123
DB_HOST=db
DB_PORT=5432

# Google OAuth (Get from https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Email Configuration (for password resets and notifications)
# For development: Use console backend (prints to terminal)
# For production: Use SMTP backend with Gmail App Password
# Gmail Setup: https://myaccount.google.com/apppasswords (requires 2FA enabled)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend  # Uncomment for production
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-16-char-app-password-here

# Site Configuration
SITE_ID=1
DEFAULT_FROM_EMAIL=noreply@kurutracker.local
