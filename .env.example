# Django Settings
# CRITICAL SECURITY SETTINGS - READ CAREFULLY!

# DEBUG: MUST be False in production!
# Leaving DEBUG=True in production exposes sensitive system information to attackers
DEBUG=False

# SECRET_KEY: MUST be unique and secure in production!
# Generate a new key using: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
# NEVER commit your real SECRET_KEY to version control!
SECRET_KEY=your-secret-key-here-CHANGE-THIS-IN-PRODUCTION

# ALLOWED_HOSTS: Comma-separated list of domains allowed to serve this application
# In production, replace with your actual domain(s)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DB_NAME=kurutracker
DB_USER=kurutracker_user
DB_PASSWORD=changeme123
DB_HOST=db
DB_PORT=5432

# Google OAuth (Get from https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Email Configuration (for password resets and notifications)
# ============================================================
# IMPORTANT: Choose the correct EMAIL_BACKEND for your environment
#
# For DEVELOPMENT (emails print to console, not sent):
#   EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
#
# For PRODUCTION (real emails sent via Gmail SMTP):
#   EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
#
# ============================================================
# Gmail SMTP Setup (Required for Production):
# ============================================================
# 1. Enable 2-Factor Authentication on your Gmail account:
#    https://myaccount.google.com/security
#
# 2. Generate an App Password (NOT your regular Gmail password):
#    https://myaccount.google.com/apppasswords
#    - Select app: "Mail"
#    - Select device: "Other (Custom name)" â†’ "Django Kurutracker"
#    - Copy the 16-character password (remove spaces)
#
# 3. Add your Gmail address to EMAIL_HOST_USER
# 4. Add the App Password to EMAIL_HOST_PASSWORD
#
# 5. Test with: python manage.py test_email your-email@example.com
# ============================================================

# Choose backend (console for dev, smtp for production)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Gmail SMTP Settings (required when using smtp.EmailBackend)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-gmail@gmail.com
EMAIL_HOST_PASSWORD=your-16-char-app-password-here

# Site Configuration
SITE_ID=1
# Sender email address (can be different from EMAIL_HOST_USER)
DEFAULT_FROM_EMAIL=noreply@kurutracker.local
# Base URL for links in emails (update in production)
SITE_URL=http://localhost:8000
