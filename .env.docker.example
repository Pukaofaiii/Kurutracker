# ==============================================
# Docker Development Environment Variables
# ==============================================
# Copy this file to .env and update the values
# cp .env.docker.example .env

# ==============================================
# DJANGO SETTINGS
# ==============================================
DEBUG=True
SECRET_KEY=django-insecure-docker-dev-key-please-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,web,nginx
SITE_ID=1

# Site URL (for email links)
SITE_URL=http://localhost:8000

# ==============================================
# DATABASE SETTINGS (PostgreSQL)
# ==============================================
USE_SQLITE=False
DB_NAME=kurutracker
DB_USER=kurutracker_user
DB_PASSWORD=changeme123
DB_HOST=db
DB_PORT=5432

# ==============================================
# REDIS & CELERY SETTINGS
# ==============================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ==============================================
# EMAIL SETTINGS (Mailhog for Development)
# ==============================================
# Mailhog SMTP settings (for development)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=mailhog
EMAIL_PORT=1025
EMAIL_USE_TLS=False
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@kurutracker.local

# Mailhog ports
MAILHOG_SMTP_PORT=1025
MAILHOG_WEB_PORT=8025

# ==============================================
# GOOGLE OAUTH (Optional - configure if needed)
# ==============================================
# Get credentials from: https://console.cloud.google.com/
# SOCIALACCOUNT_PROVIDERS_GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
# SOCIALACCOUNT_PROVIDERS_GOOGLE_SECRET=your-secret-key

# ==============================================
# DOCKER SERVICE PORTS
# ==============================================
WEB_PORT=8000
DB_PORT=5432
REDIS_PORT=6379
NGINX_PORT=80

# pgAdmin (optional - only with --profile tools)
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@kurutracker.local
PGADMIN_PASSWORD=admin

# ==============================================
# DEVELOPMENT HELPERS
# ==============================================
# Auto-create superuser on first run
# DJANGO_SUPERUSER_EMAIL=admin@kurutracker.local
# DJANGO_SUPERUSER_PASSWORD=admin

# Load initial data on first run
# LOAD_INITIAL_DATA=False
